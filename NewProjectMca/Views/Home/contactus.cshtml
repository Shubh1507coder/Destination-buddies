@{
    ViewData["Title"] = "contactus";
    Layout = "~/Views/Shared/_home.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Contact</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Travelix Project">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/Acss/styles/bootstrap4/bootstrap.min.css">
    <link href="~/Acss/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/Acss/styles/contact_styles.css">
    <link rel="stylesheet" type="text/css" href="~/Acss/styles/contact_responsive.css">
</head>

<body>

    <div class="super_container">





        <!-- Home -->

        <div class="home">
            <div class="home_background parallax-window" data-parallax="scroll" data-image-src="@Url.Content("~/Acss/images/contact_background.jpg")"></div>
            <div class="home_content">
                <div class="home_title">contact</div>
            </div>
        </div>

        <!-- Contact -->

        <div class="contact_form_section">
            <div class="container">
                <div class="row">
                    <div class="col">

                        <!-- Contact Form -->
                        <div class="contact_form_container">
                            <div class="contact_title text-center">get in touch</div>
                            <form action="@Url.Action("contact","home")" method="post" id="contact_form" class="contact_form text-center">
                                <input type="text" id="contact_form_name" name="name" class="contact_form_name input_field" placeholder="Name" required="required" data-error="Name is required.">
                                <input type="email" id="contact_form_email" name="email" class="contact_form_email input_field" placeholder="E-mail" required="required" data-error="Email is required.">
                                <input type="text" id="contact_form_subject" name="subject" class="contact_form_subject input_field" placeholder="Subject" required="required" data-error="Subject is required.">
                                <textarea id="contact_form_message" name="message" class="text_field contact_form_message" name="message" rows="4" placeholder="Message" required="required" data-error="Please, write us a message."></textarea>

                              
                                <button type="submit" id="form_submit_button" class="form_submit_button button">send message<span></span><span></span><span></span></button>
                                @if (TempData["Message"] != null)
                                {
                                    <script>
                                        Swal.fire({
                                          title: 'Success!',
                                          text: '@TempData["Message"]',
                                          icon: 'success',
                                          confirmButtonText: 'OK'
                                        });
                                    </script>

                                }

                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- About -->
        <div class="about">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5">

                        <!-- About - Image -->

                        <div class="about_image">
                            <img src="~/Acss/images/man.png" alt="">
                        </div>

                    </div>

                    <div class="col-lg-4">

                        <!-- About - Content -->

                        <div class="about_content">
                            <div class="logo_container about_logo">
                                <div class="logo"><a href="~/Acss/#"><img src="~/Acss/images/logo.png" alt="">Destination Buddy</a></div>
                            </div>
                            <p class="about_text">With years of experience and in-depth knowledge, we provide personalized recommendations, travel tips, and detailed insights to help you make the best decisions. </p>
                       @*      <ul class="about_social_list">
                                <li class="about_social_item"><a href="~/Acss/#"><i class="fa fa-pinterest"></i></a></li>
                                <li class="about_social_item"><a href="~/Acss/#"><i class="fa fa-facebook-f"></i></a></li>
                                <li class="about_social_item"><a href="~/Acss/#"><i class="fa fa-twitter"></i></a></li>
                                <li class="about_social_item"><a href="~/Acss/#"><i class="fa fa-dribbble"></i></a></li>
                                
                            </ul> *@
                        </div>

                    </div>

                    <div class="col-lg-3">

                        <!-- About Info -->

                        <div class="about_info">
                            <ul class="contact_info_list">
                                <li class="contact_info_item d-flex flex-row">
                                    <div><div class="contact_info_icon"><img src="~/Acss/images/placeholder.svg" alt=""></div></div>
                                    <div class="contact_info_text">Unnao, 209801</div>
                                </li>
                                <li class="contact_info_item d-flex flex-row">
                                    <div><div class="contact_info_icon"><img src="~/Acss/images/phone-call.svg" alt=""></div></div>
                                    <div class="contact_info_text">+91 90448 32033</div>
                                </li>
                                <li class="contact_info_item d-flex flex-row">
                                    <div><div class="contact_info_icon"><img src="~/Acss/images/message.svg" alt=""></div></div>
                                    <div class="contact_info_text"><a href="~/Acss/mailto:contactme@@gmail.com?Subject=Hello" target="_top">kartik@@gmail.com</a></div>
                                </li>
                               
                            </ul>
                        </div>

                    </div>

                </div>
            </div>
        </div>

        <!-- Google Map -->



    </div>

    <script src="~/Acss/js/jquery-3.2.1.min.js"></script>
    <script src="~/Acss/styles/bootstrap4/popper.js"></script>
    <script src="~/Acss/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="~/Acss/plugins/parallax-js-master/parallax.min.js"></script>
    <script src="~/Acss/https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyCIwF204lFZg1y4kPSIhKaHEXMLYxxuMhA"></script>
    <script src="~/Acss/js/contact_custom.js"></script>

</body>

</html>

